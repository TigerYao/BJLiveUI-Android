<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/iv_chat_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_chat_single"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_chat_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_00000000"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:text="@string/chat"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_chat_single"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/tv_red_tip"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/shape_red_exclamation"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="12dp"
        android:gravity="center"
        android:textColor="#ffffffff"
        app:layout_constraintCircle="@id/iv_chat_single"
        app:layout_constraintCircleRadius="7dp"
        app:layout_constraintCircleAngle="45"
        android:visibility="gone"
        tools:visibility="visible"
        tools:ignore="MissingConstraints" />
</android.support.constraint.ConstraintLayout>