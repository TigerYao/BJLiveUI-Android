<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="12dp"
    >

    <TextView
        android:id="@+id/qa_ask_from_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="赵钱孙李"
        android:textColor="#ff000000"
        android:layout_toStartOf="@+id/qa_ask_time"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:textSize="14sp"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/qa_ask_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="09:40"
        android:textColor="#9B9B9B"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        />

    <LinearLayout
        android:id="@+id/qa_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_pad_qa_item"
        android:layout_below="@+id/qa_ask_from_name"
        android:layout_marginTop="6dp"
        android:padding="6dp"
        >

    </LinearLayout>

</RelativeLayout>